
<section id="about" class="welcome-section">
    <div class="auto-container">
        <div class="row clearfix">

            <div class="column col-md-6 col-sm-12 col-xs-12">
                <div class="video-box">
                    <figure class="image logo">
                        {% set path =  asset('uploads/image/')~qouiqui.user.id ~'/'~ qouiqui.id ~'/avatar/avatar.jpg' %}
                        {% if asset_exists(path) %}
                            <img src="{{ asset('uploads/image/') }}{{ qouiqui.user.id }}/{{ qouiqui.id }}/avatar/avatar.jpg" alt="">
                        {% else %}
                            <div style="width:300px;height:300px;margin: 0 auto;">
                                <h1 style="text-transform: uppercase;
                                    font-family: 'Lobster', cursive;
                                    margin: 0 auto;
                                    line-height: 300px;
                                     ">
                                    {{ qouiqui.firstName }}
                                </h1>
                            </div>
                        {% endif %}
                    </figure>
                </div>
            </div>
            <!--Content Column / Fact Counter Two-->
            <div class="content-column col-md-6 col-sm-12 col-xs-12">
                <div class="inner-box">

                    {% set sociaux = jsonDecod(qouiqui.sociaux) %}
                    {% if  connected %}
                        <div class="row">
                            <div class="pull-right margin-bott-40">
                                <button type="button" class="theme-btn btn-style-one blue" data-toggle="modal"
                                        data-target="#editpropo">modifier les information
                                </button>
                            </div>
                        </div>
                    {% endif %}
                    <h3>Bienvenue À {{ qouiqui.firstname }}</h3>
                    <div class="text description">
                        {{ qouiqui.details|raw }}
                    </div>

                    <!--Fact Counter Two-->
                    <div class="fact-counter">
                        <div class="clearfix">

                            <div class="info-box row norow">
                                <div class="col-md-6">
                                    <ul class="clearfix">
                                        <li class="address">
                                            <div class="icon_propo"><span class="fa fa-home"></span></div>
                                            <div class="marg-left-40">
                                                <h4>ADDRESS</h4>
                                                {{ qouiqui.address1 }} <br>{{ qouiqui.adress2 }}
                                            </div>
                                        </li>
                                        <li class="contact-info">
                                            <div class="icon_propo"><span class="fa fa-phone" aria-hidden="true"></span></div>
                                            <div class="marg-left-40">
                                                <h4>PHONE</h4>
                                                {{ qouiqui.phone }} / {{ qouiqui.phone2 }}
                                        </li>
                                        <li class="contact-info">
                                            <div class="icon_propo"><i class="fa fa-clock-o" aria-hidden="true"></i></div>
                                            <div class="marg-left-40">

                                                <h4>Horaire</h4>
                                                {% if horaire != null %}
                                                    Ouvert du {{ horaire.week.start }} à {{ horaire.week.end }}<br>
                                                    Fermé du {{ horaire.close.start }} à {{ horaire.close.end }}<br>
                                                    <hr>
                                                    Samedi du {% if horaire.weekendsamedi.open is defined %}{{ horaire.weekendsamedi.start }} à {{ horaire.weekendsamedi.end }} {% else %}Fermé{% endif %}<br>
                                                    Dimanche{% if horaire.weekenddimanche.open is defined %} du {{ horaire.weekenddimanche.start }} à {{ horaire.weekenddimanche.end }}{% else %} Fermé {% endif %}
                                                {% else %}
                                                    Pas D'horaire
                                                {% endif %}
                                            </div>
                                        </li>
                                    </ul>
                                </div>
                                <div class="col-md-6">
                                    <ul class="clearfix">
                                        <li class="address">
                                            <div class="icon_propo"><span class="fa fa-puzzle-piece"></span></div>
                                            <div class="marg-left-40">
                                                <h4>Activité</h4>
                                                {{ category.libelle }}
                                            </div>
                                        </li>
                                        <li class="contact-info">
                                            <div class="icon_propo"><span class="fa fa-envelope-o"></span></div>
                                            <div class="marg-left-40">
                                                <h4>Email</h4>
                                                {{ qouiqui.mail }}

                                            </div>

                                        </li>
                                        <li class="contact-info">
                                            <div class="icon_propo"><span class="fa fa-globe"></span></div>
                                            <div class="marg-left-40">
                                                <h4>Website</h4>
                                                {{ qouiqui.website }}
                                            </div>
                                        </li>

                                    </ul>
                                </div>

                                <div class="clearfix"></div>
                                <hr>
                                <div class="col-md-6 pull-right row">
                                    <a href="#" class="theme-btn btn-style-one">Contactez Nous</a>

                                    <a href="#" class="theme-btn btn-style-one">Y aller</a>

                                    <div class="col-md-12 hidden-lg hidden-sm hidden-md pad-top imggoogle" style="padding-left:0;padding-top: 7px;">
                                        <a target="_blanck" href="http://maps.google.com?q={{ qouiqui.geoLat }},{{ qouiqui.geoLong }}">
                                            <img style="width:100%" src="https://maps.googleapis.com/maps/api/staticmap?zoom=17&size=600x300&maptype=roadmap
                                            &markers=color:blue%7C
                                            label:webmaster-media%7C{{ qouiqui.geoLat }},{{ qouiqui.geoLong }}
                                            &key=AIzaSyBTdMydc9PUE0gPkcgjRZXOuFPXc5BUSrg">
                                        </a>
                                    </div>
                                </div>

                                <div class="col-md-6 rs" style="display: -webkit-box;">
                                    <a href="{% if sociaux.facebook is defined %}{{ sociaux['facebook'] }} {% endif %}" target="_blank"><span class="fa fa-facebook-f"></span></a>
                                    <a href="{% if sociaux.tweeter is defined %}{{ sociaux['tweeter'] }}{% endif %}" target="_blank"><span class="fa fa-twitter"></span></a>
                                    <a href="{% if sociaux.linkedin is defined %}{{ sociaux['linkedin'] }}{% endif %}" target="_blank"><span class="fa fa-linkedin"></span></a>
                                    <a href="{% if sociaux.google is defined %}{{ sociaux['google'] }}{% endif %}" target="_blank"><span class="fa fa-google-plus"></span></a>
                                </div>

                            </div>


                        </div>
                    </div>

                </div>
            </div>
            <!--Video Column-->
        </div>
    </div>
</section>
