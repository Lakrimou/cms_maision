<div class="modal fade" id="modalEditLogo" tabindex="-1" role="dialog" aria-labelledby="modalEditLogo">
    <div class="modal-dialog" role="document" style="max-width: 600px;box-shadow: #00ff39 0px 0px 16px;">
        <div class="modal-content">
            <div class="modal-header" style="background: linear-gradient(#FFFFFF, rgba(204, 204, 204, 0.56));">
                <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                <h4 class="modal-title text-center" id="myModalLabel">Modifier le LOGO</h4>
            </div>
            <div class="modal-body">


                <div class="row">
                    <style>
                        .imageBox.imageBoxLogo {

                        }
                    </style>
                    <div class="imageBox imageBoxLogo" style="
                    {% if asset_exists('/uploads/image/'~qouiqui.user.id~'/'~qouiqui.id ~'/avatar.png') %}
                            background-image: url({{ '/uploads/image/'~qouiqui.user.id~'/'~qouiqui.id ~'/avatar.png' }}) !important;
                            background-size: 300px 100px;
                            background-position: 145px 150px;
                            background-repeat: no-repeat;
                    {% endif %}
                            ">
                        <div class="thumbBox thumbBoxLogo"></div>
                        <div class="spinner" style="display: none">Loading...</div>
                    </div>
                    <div class="action">
                        <input type="file" id="file" style="float:left; width: 250px" class="form-control">
                        <button id="btnCrop" value="Enregistrer" style="float: right" class="btn btn-primary input-button-crop"><i class="fa fa-floppy-o" aria-hidden="true"></i></button>
                        <input type="button" id="btnZoomIn" value="+" style="float: right" class="btn btn-default input-button-crop">
                        <input type="button" id="btnZoomOut" value="-" style="float: right" class="btn btn-default input-button-crop">

                    </div>
                    <div class="cropped">

                    </div>
                </div>


            </div>
        </div>
    </div>
</div>