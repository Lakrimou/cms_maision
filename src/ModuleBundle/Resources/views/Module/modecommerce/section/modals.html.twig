<!-- Modal -->
<div class="modal fade" id="modalProduits" tabindex="-1" role="dialog" aria-labelledby="modalProduits">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                <h4 class="modal-title" id="myModalLabel">Produits</h4>
            </div>
            <div class="modal-body">

                <div class="pull-right">
                    <button class="btn btn-primary" data-toggle="modal" data-target="#modalNouveauProduit"><i class="fa fa-edit"></i> Ajouter</button>
                </div>
                <div class="clear-fix"><br></div>
                <br>

                <table id="tableListProduit" class="display datatable" cellspacing="0" width="100%">
                    <thead>
                    <tr>
                        <th>Image</th>
                        <th>Nom</th>
                        <th>Prix</th>
                        <th>Description</th>
                        <th>Status</th>
                        <th>Action</th>
                    </tr>
                    </thead>

                </table>


            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-default" data-dismiss="modal">Fermer</button>
            </div>
        </div>
    </div>
</div>


<div class="modal fade" id="modalNouveauProduit" tabindex="-1" role="dialog" aria-labelledby="modalProduits2">
    <div class="modal-dialog" role="document" style="max-width: 600px;box-shadow: #00ff39 0px 0px 16px;">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                <h4 class="modal-title" id="myModalLabel">Ajouter un produit</h4>
            </div>
            <form enctype="multipart/form-data" name="nouveauProduit" id="nouveauProduit" method="post" action="{{ path('ecommerce_nouveau_produit') }}">
                <div class="modal-body">

                    <input type="hidden" name="quoiqui" value="{{ qouiqui.id }}" required>
                    <div class="row">
                        <div class="col-md-6">
                            <div class="form-group">
                                <label for="newProdNom">Nom</label>
                                <input type="text" class="form-control" id="newProdNom" name="nom" required>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-group">
                                <label for="newProdNom">Prix</label>
                                <input type="text" class="form-control" id="newProdPrix" name="prix" required>
                            </div>
                        </div>
                    </div>

                    <div class="form-group">
                        <label>Description</label>
                        <textarea name="description" class="form-control" rows="3" required id="newProdDesc"></textarea>
                    </div>
                    <div class="form-group">
                        <label for="exampleInputFile">Ajouter une image</label>
                        <input type="file" id="exampleInputFile" name="file" required>
                    </div>
                    <div class="checkbox">
                        <label>
                            <input type="checkbox" name="status"> Afficher dans la fiche
                        </label>
                    </div>


                </div>
                <div class="modal-footer">
                    <button type="submit" class="btn btn-default" id="btnSubmitNewProd">Enregistrer</button>
                    <button type="button" class="btn btn-default" data-dismiss="modal">Annuler</button>
                </div>
            </form>
        </div>
    </div>
</div>


<div class="modal fade" id="modalEditProduit" tabindex="-1" role="dialog" aria-labelledby="modalProduits3">
    <div class="modal-dialog" role="document" style="max-width: 600px;box-shadow: #00ff39 0px 0px 16px;">
        <div class="modal-content">
            <div class="modal-header" style="background: linear-gradient(#FFFFFF, rgba(204, 204, 204, 0.56));">
                <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                <h4 class="modal-title text-center" id="myModalLabel">Modifier le produit</h4>
            </div>
            <form enctype="multipart/form-data" name="editProduit" id="editProduit" method="post" action="{{ path('ecommerce_edit_produit') }}">
                <div class="modal-body">

                    <input type="hidden" name="quoiqui" value="{{ qouiqui.id }}" required>
                    <input type="hidden" id="editProdId" name="id">
                    <div class="row">
                        <div class="col-md-6">
                            <div class="form-group">
                                <label for="newProdNom">Nom</label>
                                <input type="text" class="form-control" id="editProdNom" name="nom" required>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-group">
                                <label for="newProdNom">Prix</label>
                                <input type="text" class="form-control" id="editProdPrix" name="prix" required>
                            </div>
                        </div>
                    </div>

                    <div class="form-group">
                        <label>Description</label>
                        <textarea name="description" class="form-control" id="editProdDesc" rows="7"></textarea>
                    </div>
                    <div class="form-group">
                        <label for="exampleInputFile" id="txtAjouterImage">Ajouter une image</label>
                        <input type="file" id="exampleInputFile" name="file">
                    </div>
                    <div class="checkbox">
                        <label>
                            <input type="checkbox" name="status" id="editVisibleProd"> Afficher dans la fiche
                        </label>
                    </div>


                </div>
                <div class="modal-footer">
                    <button type="submit" class="btn btn-default" id="btnSubmitEditProd">Enregistrer</button>
                    <button type="button" class="btn btn-default" data-dismiss="modal">Annuler</button>
                </div>
            </form>
        </div>
    </div>
</div>


