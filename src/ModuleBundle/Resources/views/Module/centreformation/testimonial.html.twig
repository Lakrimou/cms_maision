

<section class="testimonial" style="height: 241px;">
    {% if  connected %}
        <a data-toggle="modal" href="#section-ad" class="button-default pull-right  " style=" z-index: 99;position: relative;">GÃ©rer cette section</a>

    {% endif %}
    {% if centreFormationAd(module) %}
        <div class="overlay padding-120" style="height: 100%;">
            <div class="testimonial-items">
                <div class="testimonial-slider swiper-container" style=" overflow: initial;">
                    <div class="swiper-wrapper">

                        <div class="testimonial-item swiper-slide">
                            {% if centreFormationAd(module) %}
                                {% for a in centreFormationAd(module) %}
                                    <p style="padding: 1px 15px; font-size: 23px;">{{ a.data|raw }}</p>
                                {% endfor %}
                            {% endif %}
                            <a href="#contact" class="button-appeler" style=" margin-top: -37px;">Contactez Nous</a>

                        </div><!-- testimonial-item -->


                    </div><!-- swiper-wrapper -->

                </div><!-- swiper-container -->
            </div><!-- testimonial-items -->
        </div><!-- overlay -->
    {% else %}

        <div class="overlay padding-120" style="height: 100%;">
            <div class="testimonial-items">
                <div class="testimonial-slider swiper-container">
                    <div class="swiper-wrapper">

                        <div class="testimonial-item swiper-slide">

                            <p style="font-size: 27px" class="sec-pub"style="font-size: 27px">TAPEZ UN TEXTE ICI</p>

                            <a href="#contact" class="button-appeler" style=" margin-top: -26px;">Contactez Nous</a>

                        </div><!-- testimonial-item -->


                    </div><!-- swiper-wrapper -->

                </div><!-- swiper-container -->
            </div><!-- testimonial-items -->
        </div><!-- overlay -->
    {% endif %}
</section><!-- testimonial -->
<style>

    .button-appeler {
        border: 2px;
        display: inline-block;
        text-decoration: none;
        color: #f0f0f0;
        font-size: 16px;
        font-weight: 700;
        /* background-color: #6c5ebf; */
        border-radius: 2px;
        padding: 11px 30px;
        transition: .25s ease-out;
        border-style: solid;
        border-color: #6c5ebf;
    }

    {% set path =  asset('uploads/image/')~qouiqui.user.id ~'/'~ qouiqui.id ~'/sectionAd/photo.jpg' %}
    {% if asset_exists(path) %}

    .testimonial {
        background-image: url({{  asset('uploads/image/')~qouiqui.user.id ~'/'~ qouiqui.id ~'/sectionAd/photo.jpg' }});
        background-size: cover;
        background-position: center;
        overflow: hidden;
    }

    {#{% else %}#}
