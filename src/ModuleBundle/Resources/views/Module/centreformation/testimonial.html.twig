    /*background-size: cover;*/
    /*background-position: center;*/
    /*overflow: hidden;*/
    /*}*/

    {% endif %}

</style>

<div class="modal fade " id="section-ad" role="dialog">
    <div class="modal-dialog">

        <!-- Modal content-->
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal">&times;</button>
                <h4 class="modal-title"></h4>
            </div>

            <div class="modal-body row">
                <form id="ajout_categ" method="POST"
                      action="{{ path('module_centreformation_section_ad',{'idqq': qouiqui.id }) }}"
                      enctype="multipart/form-data">

                    {% if centreFormationAd(module) %}
                        {% for a in centreFormationAd(module) %}

                            <input type="hidden" name="secCat" class="reserver" value="{{ a.id }}">
                            <div class="col-md-12">
                                <label class="col-md12">Ajouter un texte</label>
                                <div class="form-group ">

                    <textarea placeholder="entrer Nom du Formation par Domaine" rows="3" class="form-control"
                              name="ad">{{ a.data }}</textarea>
                                </div>

                                <div class="form-group">
                                    <label> Choisissez un photo</label>
                                    <input autocomplete="off" class="form-control "
                                           name="file" type="file" required="required"
                                           placeholder="choisissez_image" data-items="8"/>
                                </div>
                            </div>
                        {% endfor %}
                    {% else %}
                        <input type="hidden" name="secCat" class="reserver">
                        <div class="col-md-12">
                            <label class="col-md12">Domaine de Formation</label>
                            <div class="form-group ">

                    <textarea placeholder="entrer Nom du Formation par Domaine" rows="3" class="form-control"
                              name="ad"></textarea>
                            </div>

                            <div class="form-group">
                                <label> Choisissez un photo</label>
                                <input autocomplete="off" class="form-control "
                                       name="file" type="file" required="required"
                                       placeholder="choisissez_image" data-items="8"/>
                            </div>
                        </div>
                    {% endif %}

                </form>
            </div>

            <div class="modal-footer">
                <button type="button" class="btn btn-default" data-dismiss="modal">Annuler</button>
                <button type="submit" class="btn btn-primary " data-target="modifier" data-selector="ajout_categ">
                    Ajouter
                </button>
            </div>
        </div>

    </div>
</div>

