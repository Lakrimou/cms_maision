<section id="propo">

        <div class="auto-container">
            <div class="row clearfix" id="abt">

                <div class="column col-md-5 col-sm-12 col-xs-12">
                    <figure class="image logo">
                        {% set path =  asset('uploads/image/')~qouiqui.user.id ~'/'~ qouiqui.id ~'/avatar/avatar.jpg' %}
                        {% if asset_exists(path) %}
                            <img src="{{ asset('uploads/image/') }}{{ qouiqui.user.id }}/{{ qouiqui.id }}/avatar/avatar.jpg" alt="">
                        {% else %}
                            <div class="hidden-sm hidden-xs" style="width:300px;height:300px;margin: 0 auto;">
                                <h1 style="text-transform: uppercase;
                                    font-family: 'Lobster', cursive;
                                    margin: 0 auto;
                                   margin-top: 200px;
                                    white-space:normal;
                                    text-align: center;">
                                    {{ qouiqui.firstName }}
                                </h1>
                            </div>
                        {% endif %}
                    </figure>
                </div>

                <div class="column col-md-7 col-sm-12 col-xs-12">
                    <!--Bordered Title-->
                    <div class="bordered-title hidden-sm hidden-xs" style="margin-top: 15px">
                        <h2 class="theme_color">A PROPOS DE L'AGENCE</h2>

                    </div>

                    {% set sociaux = jsonDecod(qouiqui.sociaux) %}
                    {% if  connected %}
                        <div class="row">
                            <div class="pull-right shake-little shake-constant shake-constant--hover  margin-bott-40">
                                <button type="button" class="theme-btn btn-style-one blue" data-toggle="modal"
                                        data-target="#editpropo">modifier les information
                                </button>

                            </div>
                        </div>

                    {% endif %}


                    <div class="desc-text hidden-sm hidden-xs">
                        <p>{{ qouiqui.details| raw }}</p>
                    </div>

                    <!--Info Box-->
                    <div class="info-box row norow">
                        <div class="col-md-6">
                            <ul class="clearfix">
                                <li class="address">
                                    <div class="icon"><span class="flaticon-location74"></span></div>
                                    <h4>ADDRESS</h4>
                                    <div class="infoitem">

                                        {{ qouiqui.address1 }} <br>{{ qouiqui.adress2 }}
                                    </div>
                                </li>
                                <li class="contact-info">
                                    <div class="icon"><span class="flaticon-telephone51"></span></div>
                                    <h4>PHONE</h4>
                                    <div class="infoitem">

                                        {{ qouiqui.phone }} / {{ qouiqui.phone2 }}
                                    </div>
                                </li>
                                <li class="contact-info">
                                    <div class="icon"><i class="fa fa-clock-o" aria-hidden="true"></i></div>
                                    <h4>Horaire</h4>
                                    <div class="infoitem">
                                        {% if horaire != null %}
                                            Ouvert de {{ horaire.week1.start }} à {{ horaire.week1.end }}<br>
                                            ouvert de {{ horaire.week2.start }} à {{ horaire.week2.end }}<br>

                                            Samedi  {% if horaire.weekendsamedi.open is defined %} du {{ horaire.weekendsamedi.start }} à {{ horaire.weekendsamedi.end }} {% else %}Fermé{% endif %}<br>
                                            Dimanche{% if horaire.weekenddimanche.open is defined %} du {{ horaire.weekenddimanche.start }} à {{ horaire.weekenddimanche.end }}{% else %} Fermé {% endif %}
                                        {% else %}
                                            Pas D'horaire
                                        {% endif %}
                                    </div>

                                </li>
                            </ul>
                        </div>
                        <div class="col-md-6">
                            <ul class="clearfix">
                                <li class="address">
                                    <div class="icon"><span class="flaticon-configure"></span></div>
                                    <h4>Activité</h4>
                                    <div class="infoitem">

                                        {{ category.libelle }}
                                    </div>
                                </li>
                                <li class="contact-info">
                                    <div class="icon"><span class="flaticon-email2"></span></div>
                                    <h4>Email</h4>
                                    <div class="infoitem">

                                        {{ qouiqui.mail|slice(0, 4) }}***@*****.com
                                    </div>
                                </li>
                                <li class="contact-info">
                                    <div class="icon"><span class="flaticon-house113"></span></div>
                                    <h4>Website</h4>
                                    <div class="infoitem">

                                        {{ qouiqui.website }}
                                    </div>
                                </li>

                            </ul>
                        </div>
                        <div class="clearfix"></div>
                        <div class="col-md-6 pull-right">
                            <a href="#contact-section" class="theme-btn btn-style-one">Contactez Nous</a>
                            <a href="http://maps.google.com?q={{ qouiqui.geoLat }},{{ qouiqui.geoLong }}" class="theme-btn btn-style-one">Y aller</a>

                            <div class="col-md-12 hidden-lg hidden-sm hidden-md pad-top imggoogle" style="padding-left:0">
                                <a target="_blanck" href="http://maps.google.com?q={{ qouiqui.geoLat }},{{ qouiqui.geoLong }}">
                                    <img src="https://maps.googleapis.com/maps/api/staticmap?zoom=17&size=600x300&maptype=roadmap
                                            &markers=color:blue%7C
                                            label:webmaster-media%7C{{ qouiqui.geoLat }},{{ qouiqui.geoLong }}
                                            &key=AIzaSyBTdMydc9PUE0gPkcgjRZXOuFPXc5BUSrg">
                                </a>
                            </div>
                        </div>

                        <div class="col-md-6 rs" style="display: -webkit-box;">
                            <a href="{% if sociaux.facebook is defined %}{{ sociaux['facebook'] }} {% endif %}" target="_blank"><span class="fa fa-facebook-f"></span></a>
                            <a href="{% if sociaux.twitter is defined %}{{ sociaux['twitter'] }}{% endif %}" target="_blank"><span class="fa fa-twitter"></span></a>
                            <a href="{% if sociaux.linkedin is defined %}{{ sociaux['linkedin'] }}{% endif %}" target="_blank"><span class="fa fa-linkedin"></span></a>
                            <a href="{% if sociaux.google is defined %}{{ sociaux['google'] }}{% endif %}" target="_blank"><span class="fa fa-google-plus"></span></a>
                        </div>

                    </div>

                </div>
            </div>
        </div>


        <div class="particle elem1 anim-delay1"></div>
        <div class="particle elem2 anim-delay5"></div>
        <div class="particle elem3 anim-delay3"></div>
        <div class="particle elem4 anim-delay8"></div>
        <div class="particle elem5 anim-delay9"></div>
        <div class="particle elem6 anim-delay2"></div>
        <div class="particle elem7 anim-delay4"></div>
        <div class="particle elem8 anim-delay3"></div>
        <div class="particle elem9 anim-delay10"></div>
        <div class="particle elem8 anim-delay11"></div>
        <div class="particle elem6 anim-delay12"></div>
        <div class="particle elem1 anim-delay14"></div>
        <div class="particle elem13 anim-delay16"></div>
        <div class="particle elem17 anim-delay18"></div>
        <div class="particle elem2 anim-delay6"></div>
        <div class="particle elem16 anim-delay9"></div>
        <div class="particle elem8 anim-delay3"></div>
        <div class="particle elem9 anim-delay10"></div>
        <div class="particle elem18 anim-delay11"></div>
        <div class="particle elem11 anim-delay12"></div>
        <div class="particle elem12 anim-delay14"></div>
        <div class="particle elem13 anim-delay16"></div>
        <div class="particle elem14 anim-delay18"></div>
        <div class="particle elem15 anim-delay6"></div>
        <div class="particle elem16 anim-delay9"></div>
        <div class="particle elem17 anim-delay7"></div>
        <div class="particle elem18 anim-delay6"></div>
        <div class="particle elem19 anim-delay3"></div>

</section>
