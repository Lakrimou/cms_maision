     aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">


            <div class="modal-body">

                {#<form id="supp_event" method="POST" action="{{ path('module_spa_delate_event') }}">#}
                <input type="hidden" name="supprimer" value="" class="delate">
                <input type="hidden" name="id_qq" value="{{ qouiqui.id }}" class="">

                <p>Voulez vous supprimer cette offre ?</p>
                <p class="debug-url"></p>
                {#</form>#}
            </div>

            <div class="modal-footer">
                <button type="button" class="btn btn-primary" data-dismiss="modal">Annuler</button>


                <button type="submit"  data-qq="{{ qouiqui.id }} "class="btn btn-danger supprime_events " data-target="modifier"
                        data-selector="sup_event">
                    Supprimer
                </button>
            </div>
        </div>
    </div>
</div>
