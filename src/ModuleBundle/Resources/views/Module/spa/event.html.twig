<div id="event_list" class="modal fade" role="dialog">
    <div class="modal-dialog">

        <!-- Modal content-->
        <div class="modal-content">
            <div class="modal-header">
                <div class="pull-right margin-bott">

                    {#<a data-toggle="modal" href="#tallModal" class="btn btn-primary">Wide, Tall Content</a>#}
                    <button type="button" class="btn btn-primary" data-toggle="modal" data-target="#modal_event"
                    >Ajouter Nouveau Offre
                    </button>
                </div>
                {#<button type="button" class="close" data-dismiss="modal">&times;</button>#}
                <h4 class="modal-title">Liste des offes</h4>
            </div>

            <div class="modal-body">
                <table id="table_id_event" class="display">
                    <thead>
                    <tr >
                        <th>Offre</th>
                        <th>Delais</th>
                        <th>Prix</th>
                        <th>modifier</th>
                        <th>supprimer</th>
                    </tr>
                    </thead>
                    <tbody>
                    {% for mod in module %}
                        {% if mod.section== 'event' %}
                            <tr data-div={{ mod.id }}>
                                <td>{{ mod.nom }}</td>
                                <td>{{ mod.data }}</td>
                                <td>{{ mod.prix }}</td>
                                <td><a href="#" data-serv="{{ mod.id }}" data-id="{{ qouiqui.id }}"
                                       class="modifier_event btn btn-success" data-toggle="modal" data-target="#edit_event "><span class="glyphicon glyphicon-edit"></span></a></td>
                                <td><a href='{{ mod.id }}' class="service_suprim_event btn btn-danger" data-id='{{ mod.id }}'
                                       data-toggle="modal" data-toggle="modal"
                                       data-target="#confirm-delete-event"><span class="glyphicon glyphicon-trash"></span></a></td>
                            </tr>
                        {% endif %}
                    {% endfor %}
                    {#<tr>#}
                    {#<td>Row 2 Data 1</td>#}
                    {#<td>Row 2 Data 2</td>#}
                    {#</tr>#}
                    </tbody>
                </table>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-default" data-dismiss="modal">Fermer</button>
            </div>
        </div>

    </div>
</div>
<div id="modal_event" class="modal fade" role="dialog">
    <div class="modal-dialog">

        <!-- Modal content-->
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal">&times;</button>
                <h4 class="modal-title">Ajouter Vos Offres</h4>
            </div>
            <div class="modal-body">
                <form id="ajout_event" method="POST" action="{{ path('module_spa_ajout_event') }}"
                      enctype="multipart/form-data">

                    <div class="row">
                        <div class="col-md-12">
                            <div class="form-group">
                                <h4>Entrer le nom de l'Offre</h4>
                                <input type="text" name="event" class="form-control" required="required"
                                       value="">

                            </div>
                        </div>

                        <div class="col-md-12">
                            <div class="form-group">
                                <h4>Entrer le porcentage de l'offre</h4>
                                <input type="number" name="prix" class="form-control" required="required"
                                       value="">

                            </div>
                        </div>

                        {#<div class="col-md-6">#}
                            {#<div class="form-group">#}
                                {#<h4>Entrer le prix précédent</h4>#}
                                {#<input type="number" name="ppprix[]" class="form-control" required="required"#}
                                       {#value="">#}

                            {#</div>#}
                        {#</div>#}
                        {#<div class="col-md-6">#}
                            {#<div class="form-group">#}
                                {#<h4>Entrer le Nouveau prix</h4>#}
                                {#<input type="number" name="Nprix[]" class="form-control" required="required"#}
                                       {#value="">#}

                            {#</div>#}
                        {#</div>#}
                        <input type="hidden" name="qq_id" value="{{ qouiqui.id }}" required>


                        <div class="col-md-12">
                            <div class="form-group">
                                <h4>Description</h4>
                                <textarea class="form-control  " name="data" required="required"
                                          name=""></textarea>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-group">
                                <h4>choisisez une photo</h4>
                                <input autocomplete="off" class="form-control  "
                                       name="file" type="file"
                                       placeholder="choisissez_image" data-items="8"/>
                            </div>
                        </div>
                    </div>


                </form>

            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-default" data-dismiss="modal">Annuler</button>
                <button type="submit" class="btn btn-primary " data-target="modifier" data-selector="ajout_event">
                    Ajouter
                </button>
            </div>
        </div>

    </div>
</div>

{##modal modifier#}

<div id="edit_event" class="modal fade" role="dialog">
    <div class="modal-dialog">

        <!-- Modal content-->
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal">&times;</button>
                <h4 class="modal-title">Modifier l'offre</h4>
            </div>
            <div class="modal-body">
                <form id="edit_events" method="POST" action="{{ path('module_spa_modif_event') }}"
                      enctype="multipart/form-data">
                    <input type="hidden" name="qq_id" value="{{ qouiqui.id }}" required>
                    <input id="idevent" type="hidden" name="eventID" value="" required>
                    <div class="row">
                        <div class="col-md-6">
                            <div class="form-group">


                                <h4>Entrer votre offre</h4>
                                <input id="nomevent" type="text" name="event" class="form-control"
                                       value="">

                            </div>
                        </div>


                        <div class="col-md-6">
                            <div class="form-group">
                                <h4>Entrer le prix</h4>
                                <input id="prixEvent" type="text" name="prix" class="form-control"
                                       value="">

                            </div>
                        </div>
                        <div class="col-md-12">
                            <div class="form-group">
                                <h4> Entrer(Occasion/Delais) de l'offre </h4>
                                <textarea id="dataEvent" class="form-control event_txtarea " name="data"
                                ></textarea>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-group">
                                <h4>choisisez une photo</h4>
                                <input autocomplete="off" class="form-control  "
                                       name="file" type="file"
                                       placeholder="choisissez_image" data-items="8"/>
                            </div>
                        </div>
                    </div>


                </form>

            </div>

            <div class="modal-footer">
                <button type="button" class="btn btn-default" data-dismiss="modal">Annuler</button>
                <button type="submit" class="btn btn-primary " data-target="modifier" data-selector="edit_events">
                    Modifier
                </button>
            </div>
        </div>

    </div>
</div>
</div>

