{#=======================Slidre=======================#}
<div class="modal fade modalSlider" id="gallery-modal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel"
     aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
                <h4 class="modal-title"></h4>
            </div>
            <div class="modal-body">

                <div class="row norow">
                    <form action="{{ path('module_hotel_upload', {'id_qq': qouiqui.id}) }}" class="dropzone" id="my-dropzone"></form>
                </div>
                <div class="row norow">
                    <form action="{{ path('module_hotel_tmp_folder',{'qq_id': qouiqui.id} ) }}" method="post"
                          enctype="multipart/form-data">

                        <ul id="sortable">
                            {% for img in slider %}
                                <div class="col-md-6 " data-div="{{ img }}">
                                    <div class="thumbnail">
                                        <!-- Single button -->
                                        <div class="btn-group pull-right " style="position: absolute;right: 20px;">
                                            <button type="button" class="btn btn-default dropdown-toggle"
                                                    data-toggle="dropdown"
                                                    aria-haspopup="true" aria-expanded="false">
                                                <i class="fa fa-pencil" aria-hidden="true"></i> <span
                                                        class="caret"></span>
                                            </button>
                                            <ul class="dropdown-menu">

                                                <li><a href="#" class="remove"
                                                       data-name-remove="{{ img }}"
                                                       data-id="{{ qouiqui.id }}">supprimer</a>
                                                </li>
                                            </ul>
                                        </div>

                                        <li class="ui-state-default">


                                            {#<input type="text" name="{{ loop.index }}" value="{{ img }}"><br>#}


                                            <img src="/uploads/image/{{ iduser }}/{{ qouiqui.id }}/slider/{{ img }}">
                                        </li>

                                    </div>
                                </div>
                            {% endfor %}
                            {#<input type="submit" class="submit">#}

                        </ul>
                        <div class="modal-footer">

                        </div>
                        <div class="col-md-12">
                            <button type="submit" class="btn btn-default pull-left ">
                                Enregistrer
                            </button>
                            <button type="button" class="btn btn-default pull-right" data-dismiss="modal">Fermer</button>
                        </div>

                    </form>
                </div>

                {#<input type="submit" value="ok">#}


            </div>
            <div class="modal-footer">

            </div>
            {#</form>#}


        </div>
    </div>
</div>