<!--     modal edit des a propos -->

<!-- Large modal -->

{% for ap in module %}
{% if ap.about is not null %}
<div class="modal fade ajout-apropos-modal-lg" tabindex="-1" role="dialog"
     aria-labelledby="myLargeModalLabel" id="edit_apropos{{ loop.index }}">
    <div class="modal-dialog modal-lg" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span
                            aria-hidden="true">&times;</span></button>
                <h4 class="modal-title" id="myModalLabel">Ajouter votre à propos</h4>
            </div>
            <div class="modal-body">

                <div class="col-md-12">
                    <div class="well-block">

                        <form action="{{ path('hotel_editApropos', {'id_qq': qouiqui.id, 'id_ap': ap.id}) }}" method="POST"
                              name="chambre-form" enctype="multipart/form-data" id="apropos-form">
                            <!-- Form start -->
                            <div class="row">
                                <!-- Text input-->

                                <!-- Text input-->
                                <!-- Text area -->
                                <!-- Textarea -->
                                <div class="form-group">
                                    <label class="col-md-12 control-label"
                                           for="keyinformation">Détails</label>
                                    <div class="col-md-12">
                                        <textarea name="apropos[apropos_details]" class="ckeditor" required>{{ ap.about.apropos_details }}</textarea>

                                    </div>
                                </div>
                                <div class="col-md-12">
                                    <label class="control-label" for="name"><i class="fa fa-facebook-official"
                                                                               aria-hidden="true"> Ajouter Facebook</i></label>
                                    {% if ap.about.fb %}
                                    <input type="text" class="form-control" name="apropos[fb]" value="{{ ap.about.fb }}" />
                                    {% else %}
                                    <input type="text" class="form-control" name="apropos[fb]" />
                                    {% endif %}
                                    <label class="control-label" for="name" ><i
                                                class="fa fa-google-plus-official" aria-hidden="true"> Ajouter
                                            Google+</i></label>
                                    {% if ap.about.gp %}
                                    <input type="text" class="form-control" name="apropos[gp]" value="{{  ap.about.gp }}" >
                                    {% else %}
                                    <input type="text" class="form-control" name="apropos[gp]" >
                                    {% endif %}
                                    <label class="control-label" for="name" ><i class="fa fa-twitter"
                                                                                                  aria-hidden="true">
                                            Ajouter Twitter</i></label>
                                    {% if ap.about.tw %}
                                    <input type="text" class="form-control" name="apropos[tw]" value="{{ ap.about.tw }}" >
                                    {% else %}
                                    <input type="text" class="form-control" name="apropos[tw]"  >
                                    {% endif %}
                                    <br>
                                </div>

                                <div class="col-md-12 add-room ">
                                    <div class="form-group">
                                        <label class="btn-bs-file theme-btn btn-style-two">
                                            Cliquer ici pour ajouter une photo
                                            <input type="file"
                                                   class="form-control inline-block uploadImage imageUps"
                                                   name="apropos[image_apropos]" />
                                        </label>
                                        <img src="#" alt="image upload" class="upImg imageUplo"
                                        />
                                    </div>
                                    <br>
                                </div>


                            </div>
                            <button type="submit" class="theme-btn btn-style-two envoyerUpload"
                                    id="ajouter-apropos">
                                Modifier
                            </button>
                            <button type="button" class="theme-btn btn-style-one pull-right " data-dismiss="modal">Fermer
                            </button>
                        </form>
                        <!-- form end -->
                    </div>
                </div>

            </div>
            <div class="modal-footer">

            </div>
        </div>
    </div>
</div>
{% endif %}
{% endfor %}
<!--     modal edit  a propos -->