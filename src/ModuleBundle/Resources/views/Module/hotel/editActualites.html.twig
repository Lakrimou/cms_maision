<!--     modal  modifier Actualités  -->

<!-- Large modal -->

{% for ac in module %}
    {% if ac.descriptionNews is not null %}
        <div class="modal fade edit-actualités-modal-lg" tabindex="-1" role="dialog"
             aria-labelledby="myLargeModalLabel" id="modifier-actualites{{ loop.index }}">
            <div class="modal-dialog modal-lg" role="document">
                <div class="modal-content">
                    <div class="modal-header">
                        <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span
                                    aria-hidden="true">&times;</span></button>
                        <h4 class="modal-title" id="myModalLabel">Ajouter Actualités</h4>
                    </div>
                    <div class="modal-body">

                        <div class="col-md-12">
                            <div class="well-block">

                                <form action="{{ path('hotel_editActualites', {'id_qq': qouiqui.id, 'id_ac':ac.id}) }}"
                                      method="POST"
                                      name="edit-actualites-form" enctype="multipart/form-data">
                                    <!-- Form start -->
                                    <div class="row">

                                        <div class="col-md-12">
                                            <div class="form-group">
                                                <label class="control-label" for="name">Titre</label>
                                                <input type="text" name="actualites[titre_actualites]"
                                                       class="form-control"
                                                       required value="{{ ac.descriptionNews.titre_actualites }}"/>
                                            </div>
                                        </div>
                                        <div class="col-md-12">
                                            <label class="control-label" for="name">Date</label>
                                            <input type="date" class="form-control" id="date"
                                                   name="actualites[date_actualites]"
                                                   required value="{{ ac.descriptionNews.date_actualites }}"/>
                                        </div>
                                        <!-- Text input-->

                                        <!-- Text input-->
                                        <!-- Text area -->
                                        <!-- Textarea -->
                                        <div class="form-group">
                                            <label class="col-md-12 control-label"
                                                   for="keyinformation">Description</label>
                                            <div class="col-md-12">
                                                <textarea name="actualites[actualitesDetails]"
                                                          class="ckeditor">{{ ac.descriptionNews.actualitesDetails }}</textarea>
                                            </div>
                                        </div>
                                        <!-- Text area -->

                                        <div class="col-md-12 add-room ">
                                            <div class="form-group">
                                                <label class="btn-bs-file theme-btn btn-style-two">
                                                    Cliquer ici pour ajouter une photo
                                                    <input type="file"
                                                           class="form-control inline-block uploadImage imageUps"
                                                           name="actualites[image_actualites]" />
                                                </label>
                                                <img src="#" alt="image upload" class="upImg imageUplo"
                                                />
                                            </div>
                                        </div>
                                        <!-- Button -->

                                    </div>
                                    <button type="submit" class="theme-btn btn-style-two envoyerUpload"
                                            id="ajouter-chambres">
                                        Modifier
                                    </button>
                                    <button type="button" class="theme-btn btn-style-one pull-right " data-dismiss="modal">Fermer
                                    </button>
                                </form>
                                <!-- form end -->
                            </div>
                        </div>

                    </div>
                    <div class="modal-footer">

                    </div>
                </div>
            </div>
        </div>
    {% endif %}
{% endfor %}
<!--     modal modifier Actualités -->