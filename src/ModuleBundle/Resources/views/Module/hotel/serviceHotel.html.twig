{#=======================Les Services=======================#}

<div class=" col-md-12 col-sm-12 col-xs-12 affiche_services">
    <div class='row'>
        <div class="carousel slide" data-ride="carousel" id="quote-carousel">
            <!-- Bottom Carousel Indicators -->
            <ol class="carousel-indicators">

                {% for service in services %}
                <li data-target="#quote-carousel" data-slide-to="{{ loop.index -1 }}" {% if loop.index == 1 %}class="active"{% endif %}></li>

                {% endfor %}

            </ol>

            <!-- Carousel Slides / Quotes -->
            <div class="carousel-inner">
                {% for service in services %}
                    <div class="item {% if loop.index == 1 %}active{% endif %} color-name">
                        <blockquote>
                            <div class="row">
                                <div class="col-sm-6 text-center">
                                    <img src="{{ asset('uploads/image/' ~ qouiqui.user.id ~'/' ~ qouiqui.id ~ '/services/'~ service.imageService ) }}"
                                         alt=""/>
                                </div>
                                <div class="col-sm-6 ">
                                    <Strong class="name-strong">{{  service.nameService }}</Strong>
                                    {{ service.servicesDetails|raw }}
                                </div>
                            </div>
                        </blockquote>
                    </div>
                {% endfor %}


            </div>

            <!-- Carousel Buttons Next/Prev -->
            <a data-slide="prev" href="#quote-carousel" class="left carousel-control"><i class="fa fa-chevron-left"></i></a>
            <a data-slide="next" href="#quote-carousel" class="right carousel-control"><i
                        class="fa fa-chevron-right"></i></a>
        </div>
    </div>

</div>
