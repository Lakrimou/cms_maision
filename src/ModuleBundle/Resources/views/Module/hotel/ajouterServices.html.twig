                                        <textarea name="services[servicesDetails]" class="ckeditor" maxlength="50"></textarea>
                                    </div>

                                </div>
                                <!-- Text area -->
                                <div class="col-md-12"><br/></div>
                                <div class="col-md-12 add-room ">
