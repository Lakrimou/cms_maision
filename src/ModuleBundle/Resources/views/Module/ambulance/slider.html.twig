{% if connected %}
    <button type="button" class="theme-btn btn-style-one blue imgbtn"  style="top: 200px; position: absolute; z-index: 98;" data-toggle="modal" data-target="#gallery-modal">
        modifier les image de slider
    </button>
    <form action="{{ path('change_color',{'qq_id': qouiqui.id }) }}" method="POST" style=" top: 253px; position: absolute; z-index: 99;">
        <div class="bfh-colorpicker" data-name="colorpicker2" data-color="#FF0000">
        </div>
        <input type="submit" class="theme-btn btn-style-one chng-color" style="z-index: 97;" value="changer les color" >
    </form>


    <div class="modal fade" id="gallery-modal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel"
         aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">

                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal">Ã—</button>
                    <h4 class="modal-title">Modifier les image de sider</h4>
                </div>
                <div class="modal-body">


                    <div class="row norow">
                        <form action="{{ path('uploadslider',{'qq_id': qouiqui.id }) }}" class="dropzone" id="my-dropzone"></form>
                    </div>

                    <div class="row norow">
                        <form id="orderimg" action="{{ path('module_spa_tmp_folder',{'qq_id': qouiqui.id } )  }}" method="post" enctype="multipart/form-data">

                            <ul id="sortable">
                                {% for img in slider%}

                                    <div id="sup{{ loop.index }}" class="col-md-6 " data-div="{{ img }}">
                                        <div class="thumbnail">
                                            <!-- Single button -->
                                            <div class="btn-group pull-right " style="position: absolute;right: 20px;">
                                                <button type="button" class="btn btn-default dropdown-toggle"
                                                        data-toggle="dropdown"
                                                        aria-haspopup="true" aria-expanded="false">
                                                    <i class="fa fa-pencil" aria-hidden="true"></i> <span class="caret"></span>
                                                </button>
                                                <ul class="dropdown-menu">
                                                    <li>
                                                        <a href="#" class="remove" data-name-remove="{{ img }}" data-sup="#sup{{ loop.index }}" data-id="{{ qouiqui.id }}">supprimer</a>
                                                    </li>
                                                </ul>
                                            </div>

                                            <li class="ui-state-default">


                                                <input type="text" class="hidden" name="{{ loop.index }}" value="{{ img }}"><br>


                                                <img  style="width:100%" src="/uploads/image/{{ iduser }}/{{ qouiqui.id}}/slider/{{ img }}">
                                            </li>


                                        </div>
                                    </div>
                                {% endfor %}

                            </ul>
                        </form>

                    </div>


                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-default" data-dismiss="modal">Annuler</button>
                    <button type="button" class="btn btn-default" id="upload_img" data-dismiss="modal">Envoyer l'images</button>
                    <button type="submit" class="btn btn-default " data-target="modifier" data-selector="orderimg">enregistrer l'ordre</button>
                </div>

            </div>
        </div>
    </div>
{% endif %}
<style>
    .input-group.bfh-colorpicker-toggle {
        width: 276px;
    }
    input[name='colorpiker2']{
        background: white;
    }
</style>
