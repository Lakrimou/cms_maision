<style>

    .info_section {
        background: url(../tpl/fiche/images/avocat.jpg) no-repeat;
        background-size: cover!important;
    }



</style>
<section class="info_section">
    <div class="container-fluid">

        <div class="row">
            <div class="col-md-6 col-sm-4"></div>
            <div class="col-md-6 col-sm-8 right_box">
                <div class="right_box_inner clearfix padding">
                    {% if attributes.connected %}
                        <div class="row">
                            <button type="button" class="theme-btn button11 btn-style-one pull-right " data-toggle="modal" data-target="#list-information" style="display: block;
        z-index: 10;
        position: relative;">Gérer mes informations personnelles
                            </button>
                        </div>


                    {% endif %}
                    <div class="row">
                        {% if attributes["theme"]!=null and  attributes["theme"]["diploma"] is defined  and attributes["theme"]["diploma"]|length>0 %}
                            <div class="col-md-6 col-sm-6 white_content top20 bottom30">
                                <i class="fa fa-graduation-cap"></i>
                                <h3 class="bottom10 top20 " >Diplômes</h3>
                                {% for diploma in attributes["theme"]["diploma"] %}
                                    <p class="list_diploma_paragraph"> - {{ diploma.school|capitalize }} ,{{ diploma.name|capitalize }},{{ diploma.date|date("d/m/Y") }}</p>


                                {% endfor %}

                            </div>
                        {% endif %}
                        {% if attributes["theme"]!=null and  attributes["theme"]["langue"] is defined and attributes["theme"]["langue"]|length>0 %}
                        <div class="col-md-6 col-sm-6 white_content top20 bottom30">
                            <i class="fa fa-language"></i>
                            <h3 class="bottom10 top20 " >Langues</h3>
                            {% for langue in attributes["theme"]["langue"]   %}
                                <p class="list_diploma_paragraph" > - {{ langue.langue }}


                                    {% endfor %}

                        </div>

                        {% endif %}
                    </div>
                    <div class="row">

                        {% if attributes["theme"]!=null and  attributes["theme"]["skill"] is defined and attributes["theme"]["skill"]|length>0 %}
                            <div class="col-md-6 col-sm-6 white_content top20 bottom30">
                                <i class="fa fa-black-tie"></i>
                                <h3 class="bottom10 top20 " >Compétences</h3>
                                {% for skill in attributes["theme"]["skill"] %}
                                <p  class="list_diploma_paragraph"> - {{ skill.skill|capitalize }}


                                    {% endfor %}

                            </div>

                        {% endif %}

                        {% if attributes["theme"]!=null and  attributes["theme"]["payment"] is defined  and attributes["theme"]["payment"] |length>0 %}
                            <div class="col-md-6 col-sm-6 white_content top20 bottom30">
                                <i class="fa fa-credit-card"></i>
                                <h3 class="bottom10 top20 " >Mode de règlement</h3>
                                {% for payment in attributes["theme"]["payment"]    %}
                                <p  class="list_diploma_paragraph"> - {{ payment.payment }}


                                    {% endfor %}

                            </div>


                        {% endif %}



                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

