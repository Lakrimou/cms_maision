<div class="modal fade" id="add-diploma" tabindex="-1" role="dialog" aria-hidden="true">
    <div class="modal-dialog modal-md" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h2 class="text-center">Modification des données</h2>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <div class="row">

                    <div class="col-md-10 col-md-offset-1">
                        <form id="add_diploma">


                            <div class="form-group row element-form">

                                <div class="col-md-3">
                                    <label class="control-label">Ecole/Institue:</label>
                                </div>

                                <div class="col-sm-9">
                                    <input type="text" id="school_update" class="form-control" placeholder="Entrez le nom de l'ecole" name="school" required>
                                </div>
                            </div>
                            <div class="form-group row element-form">

                                <div class="col-md-3">
                                    <label class="control-label">Diplome</label>
                                </div>

                                <div class="col-sm-9">
                                    <input type="text" id="name_update" school_updateclass="form-control" placeholder="Entrez le diplome respectif" name="name" required>
                                </div>
                            </div>
                            <div class="form-group row element-form">

                                <div class="col-md-3">
                                    <label class="control-label">Date</label>
                                </div>

                                <div class="bfh-datepicker" id="date_update" data-name="date" data-format="y-m-d"
                                     aria-required="true"></div>
                            </div>


                        </form>

                    </div>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-danger" data-dismiss="modal">Annuler</button>
                <button type="submit" class="btn  btn-primary saveInformation" data-id="" data-information="diploma">Enregistrer</button>

            </div>
        </div>
    </div>
</div>
