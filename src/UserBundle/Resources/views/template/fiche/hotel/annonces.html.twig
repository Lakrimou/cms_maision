<div class="modal fade bookch" id="modal_booking" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header color-header text-center">
                <h3 class="text-uppercase resev-ht">Réserver</h3>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">

                <div class="container make_an_appointment events-reserv">
                    <div class="row">
                        <div class="col-sm-6  col-xs-12">
                            <form method="POST" action="/module/hotel/booking/350/4">

                                <div class="col-sm-12 col-xs-12 form-group">
                                    <p style="margin-top: 20px;"><strong>Type de chambre :</strong> <span id="bookingType"></span></p>
                                    <p style="margin-top: 10px;"><strong>Prix/Nuit :</strong> <span id="bookingPrix"></span>DT</p>
                                </div>
                                <div class="col-sm-6 col-xs-12  ">
                                    <div class="form-group">
                                        <label>Date d'arrivée</label>
                                        <div class='input-group'>
                                            <input type='date' class="form-control " name="dateDebut" required/>
                                            <span class="input-group-addon calandrier_reserv"><span class="glyphicon glyphicon-calendar"></span></span>
                                        </div>
                                    </div>

                                </div>
                                <div class="col-sm-6 col-xs-12  ">
                                    <div class="form-group">
                                        <label>Date de départ</label>
                                        <div class='input-group'>
                                            <input type='date' class="form-control " name="dateFin" required/>
                                            <span class="input-group-addon calandrier_reserv">
                                                            <span class="glyphicon glyphicon-calendar"></span>
                                                    </span>
                                        </div>
                                    </div>

                                </div>


                                <div class="col-sm-12 col-xs-12 submit_btn text-center">

                                </div>

                            </form>
                        </div>
                    </div>
                </div>


            </div>
            <div class="modal-footer">
                <button type="button" class="btn-style-four btn btn-danger pull-right" data-dismiss="modal">Annuler</button>
                <button type="submit" class="theme-btn btn btn-primary btn-style-two " data-target="modifier" data-selector="booking">Réserver</button>
            </div>

        </div>
    </div>
</div>

