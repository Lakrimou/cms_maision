<section id="section-services" class="we_are bg_light padding">
    <div class="container">
        {% if attributes.connected %}
            <div class="shake pull-right margin-bott-40 numService">
                <button type="button" class="theme-btn button11 btn-style-one pull-right" data-toggle="modal"
                        data-target="#list-services">Gérrer les services
                </button>
            </div>
        {% endif %}
        <div class="row">
            <div class="col-md-12">
                <h2 class="text-uppercase">Nos <span class="color_red">services</span></h2>
                <div class="line_1"></div>
                <div class="line_2"></div>
                <div class="line_3"></div>
            </div>
        </div>
        <div class="row">

            {% for iconservice in DirAssetParcour(asset('uploads/image/iconService/'~attributes.category.slug|lower~'/SVG/')) %}
                <img width="50px" height="50px" src="{{ asset('uploads/image/iconService/')}}{{  attributes.category.slug|lower~'/SVG/'}}{{ iconservice }}" alt="">
            {% endfor %}

            {% set theme = attributes.theme %}

            {% if theme !=null %}


                {% if theme["Service"] is defined and theme["Service"]|length>0 %}
                    {% for key, service in theme["Service"] %}

                        {% if (theme.Service|length == 1) %}
                            <div class="col-md-4 col-sm-4 col-xs-12"></div>
                        {% endif %}
                        {% if (theme.Service|length == 2) and (loop.index == 1) %}
                            <div class="col-md-2 col-sm-2 col-xs-12"></div>
                        {% endif %}
                        {% if loop.index < 7 %}
                            <div class=" col-md-4 col-sm-4 top40 " style="min-height: 380px;">
                                <div class="block-service margin15 pad15" style="background: white">
                                    <div class="row">
                                        <div class="col-md-12 text-center">
                                    <span class="icon-shortcode">
                                    <i class="{% if service["serviceIcon"] is defined %}{{ service["serviceIcon"]|slice(0,50) }}{% endif %}" aria-hidden="true"></i>
                                    </span>
                                        </div>
                                        <h3 class="serviceTitle text-center pad15">
                                            {% if service["service"] is defined %}{{ service["service"] }}{% endif %}
                                        </h3>
                                        <div class="clearfix">
                                            <div class="separator" style="width: 100px;border-bottom-width: 2px"></div>
                                        </div>
                                        <p class="service-text">
                                            {% if service["description"] is defined %}{{ service["description"]|slice(0,50) }}..{% endif %}

                                        </p>
                                    </div>
                                    <div class="row service pad15">
                                        <a href="#" data-toggle="modal" class="service-details-btn btn-default btn-xs pull-right suite"
                                           data-target="#service-details" data-module='{"service":"{% if service["service"] is defined %}{{ service["service"] }}{% endif %}","description":"{% if service["description"] is defined %}{{ service["description"]|raw }}{% endif %}"}'>Lire la suite</a>
                                    </div>
                                </div>
                            </div>
                        {% endif %}
                    {% endfor %}
                {% else %}
                    {% for i in 1..3 %}
                        <div class="block-service col-md-4 col-sm-4 top40" style="background: white;min-height: 380px;width: 360px;">
                            <div class="row">
                                <div class="col-md-12 text-center">
                    <span class="icon-shortcode">
                    <i class="fa fa-server" aria-hidden="true"></i>
                    </span>
                                </div>
                                <h3 class="serviceTitle text-center pad15">
                                    Services Demo de construction construction
                                </h3>
                                <div class="clearfix">
                                    <div class="separator" style="width: 100px;border-bottom-width: 2px"></div>
                                </div>
                                <p class="service-text">
                                    Le Lorem Ipsum est simplement du faux texte employé dans la composition et la mise en page avant impression
                                </p>
                            </div>
                            <div class="row service pad15">
                                <a href="#" data-toggle="modal" class="service-details-btn btn-default btn-xs pull-right suite"
                                   data-target="#service-details" data-module='{"service":"Services de construction","description":"Le Lorem Ipsum est simplement du faux texte employé dans la composition et la mise en page avant impression"}'>Lire la suite</a>
                            </div>
                        </div>
                    {% endfor %}
                {% endif %}

            {% endif %}

        </div>
    </div>
    <div class="paralax-icon">
        <div class="particle elem1 anim-delay1"></div>
        <div class="particle elem2 anim-delay5"></div>
        <div class="particle elem3 anim-delay3"></div>
        <div class="particle elem4 anim-delay8"></div>
        <div class="particle elem5 anim-delay9"></div>
        <div class="particle elem6 anim-delay2"></div>
        <div class="particle elem7 anim-delay4"></div>
        <div class="particle elem8 anim-delay3"></div>
        <div class="particle elem9 anim-delay10"></div>
        <div class="particle elem8 anim-delay11"></div>
        <div class="particle elem6 anim-delay12"></div>
        <div class="particle elem1 anim-delay14"></div>
        <div class="particle elem13 anim-delay16"></div>
        <div class="particle elem17 anim-delay18"></div>
        <div class="particle elem2 anim-delay6"></div>
        <div class="particle elem16 anim-delay9"></div>
        <div class="particle elem8 anim-delay3"></div>
        <div class="particle elem9 anim-delay10"></div>
        <div class="particle elem18 anim-delay11"></div>
        <div class="particle elem11 anim-delay12"></div>
        <div class="particle elem12 anim-delay14"></div>
        <div class="particle elem13 anim-delay16"></div>
        <div class="particle elem14 anim-delay18"></div>
        <div class="particle elem15 anim-delay6"></div>
        <div class="particle elem16 anim-delay9"></div>
        <div class="particle elem17 anim-delay7"></div>
        <div class="particle elem18 anim-delay6"></div>
        <div class="particle elem19 anim-delay3"></div>
    </div>
</section>

{% if attributes.connected %}
    <!-- Modal -->

    <div id="add-service" class="modal fade" role="dialog">
        <div class="modal-dialog">

            <!-- Modal content-->
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal">&times;</button>
                    <h4 class="modal-title">Modal Header</h4>
                </div>
                <div class="modal-body">
                    <form id="ajout_service_global" action="#" method="post" enctype="multipart/form-data">

                        <h2 class="text-center" id="title-form-ajout">Ajout service</h2>

                        <div class="form-group row element-form">


                            <div class="col-sm-9">

                                <input name="logo" id="logo_service" type="hidden" value="fa-home">

                            </div>

                        </div>
                        <div class="form-group row element-form">
                            <div class="col-md-3">
                                <label class="control-label">Les Services</label>
                            </div>
                            <div class="col-sm-9">
                                <select class="form-control" id="services" name="service">
                                    <option value="BUFFETS CHAUDS">BUFFETS CHAUDS</option>
                                    <option value="BUFFETS FROIDS">BUFFETS FROIDS</option>
                                    <option value="MÉCHOUI">MÉCHOUI</option>
                                    <option value="Pause café">PAUSE CAFÉ</option>
                                    <option value="SERVICE À TABLE PAR VOTRE TRAITEUR">SERVICE À TABLE PAR VOTRE TRAITEUR</option>
                                    <option value="WALKING DINNERS / COCKTAILS">WALKING DINNERS / COCKTAILS</option>
                                    <option value="" id="auto-remplire">Choisir autre Service</option>
                                </select>
                            </div>
                        </div>
                        <div class="form-group row element-form" id="title-service-add">
                            <div class="col-md-3">
                                <label class="control-label">Nom</label>
                            </div>
                            <div class="col-sm-9">
                                <input type="text" name="service" class="form-control name_service" placeholder="Ecrire le nom du service" id="name-add">
                            </div>
                        </div>

                        <div class="form-group row element-form">

                            <div class="col-md-3">
                                <label class="control-label">Description</label>
                            </div>

                            <div class="col-sm-9">

                                         <textarea class="form-control" cols="60" name="description"
                                                   rows="10" placeholder="Ajoutez des details par rapport à ce service.." required></textarea>
                            </div>
                        </div>


                        <div class="form-group row element-form">
                            <div class="col-md-3">
                                <label class="control-label">Image de Service</label>
                            </div>
                            <div class="col-sm-7">
                                <input type="text" id="icon-filtre-2" class="icon-filtre form-control name_service" placeholder="recherche Votre Image">
                                <input type="hidden" name="serviceIcon" class="form-control name_service" placeholder="recherche Votre Image">
                            </div>
                            <div class="col-md-2">
                                <button type="button" class="btn btn-primary btn-lg btn-block"><i class="fa fa-search" aria-hidden="true"></i></button>
                            </div>
                        </div>
                        <div class="row">
                            <div class=" pull-right col-sm-9 icon_list">
                                {{ include('@User/template/fontawesomeIcons.html.twig') }}
                            </div>
                        </div>


                    </form>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-danger" data-dismiss="modal">Annuler</button>
                    <button type="submit" class="btn btn-primary " data-target="modifier" data-selector="ajout_service_global">Enregistrer</button>
                </div>
            </div>

        </div>
    </div>
    <div class="modal fade" id="list-services" tabindex="-1" role="dialog" aria-hidden="true">
        <div class="modal-dialog modal-md" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="exampleModalLongTitle">liste des services</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">
                    <div class="row">
                        <div class="col-md-12">
                            {% if attributes.theme["Service"] is defined %}
                                {% if theme!=null %}
                                    <ul class="list-group">
                                        {% for key,service in attributes.theme["Service"] %}
                                            <li class="list-group-item">
                                                {{ service["service"] }}
                                                <span class="pull-right">
                                        <button type="button" class="btn btn-warning form_update_service_global" data-toggle="modal" data-target="#update-service" data-service='{"service_update":"{% if service["service"] is defined %}{{ service["service"] }}{% endif %}","icon_update":"{% if service["serviceIcon"] is defined %}{{ service["serviceIcon"]|slice(0,50) }}{% endif %}","description_update":"{% if service["description"] is defined %}{{ service["description"] }}{% endif %}" }'
                                                data-id="{{ key }}"
                                                data-link='{{ path('update_service_global',{"serviceId":key,"themeId":attributes["themeId"]}) }}'>Modifier</button>
                                        <a href="{{ path('delete_service_global',{"serviceId": key,"themeId":attributes["themeId"]}) }}" type="button" class="btn btn-danger">Supprimer</a>
                                        </span>
                                            </li>
                                        {% endfor %}

                                    </ul>
                                {% endif %}
                            {% else %}
                                <div class="text-center">
                                    <h3> Pas de service pour le moment !</h3>
                                </div>
                            {% endif %}
                        </div>

                    </div>
                </div>

                <div class="modal-footer">
                    <button type="button" class="btn btn-info form_add_service_global" data-toggle="modal"
                            data-target="#add-service">Ajouter service
                    </button>
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Fermer</button>
                </div>

            </div>
        </div>
    </div>
    <div class="modal fade" id="update-service" tabindex="-1" role="dialog" aria-hidden="true">
        <div class="modal-dialog modal-md" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title">Modifier service</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">
                    <div class="row">

                        <div class="col-md-10 col-md-offset-1">

                            <form method="post" id="update_service_form" action="" enctype="multipart/form-data">

                                <h2 class="text-center" id="title-form-ajout">Modifier service</h2>

                                <div class="form-group row element-form">
                                    <div class="col-md-3">
                                        <label class="control-label">Les Services</label>
                                    </div>
                                    <div class="col-sm-9">
                                        <select class="form-control" id="servicess" name="service">
                                            <option value="BUFFETS CHAUDS">BUFFETS CHAUDS</option>
                                            <option value="BUFFETS FROIDS">BUFFETS FROIDS</option>
                                            <option value="MÉCHOUI">MÉCHOUI</option>
                                            <option value="Pause café">PAUSE CAFÉ</option>
                                            <option value="SERVICE À TABLE PAR VOTRE TRAITEUR">SERVICE À TABLE PAR VOTRE TRAITEUR</option>
                                            <option value="WALKING DINNERS / COCKTAILS">WALKING DINNERS / COCKTAILS</option>
                                            <option value="" id="auto-remplire">Choisir autre Service</option>
                                        </select>
                                    </div>
                                </div>
                                <div class="form-group row element-form" id="title-service-mod">
                                    <div class="col-md-3">
                                        <label class="control-label">Nom</label>
                                    </div>
                                    <div class="col-sm-9">
                                        <input type="text" id="service_update" name="service"
                                               class="form-control name_service" placeholder="Ecrire le nom du service">
                                    </div>
                                </div>

                                <div class="form-group row element-form">

                                    <div class="col-md-3">
                                        <label class="control-label">Description</label>
                                    </div>

                                    <div class="col-sm-9">

                                         <textarea id="description_update" class="form-control" cols="60" name="description"
                                                   rows="10" required></textarea>
                                    </div>
                                </div>
                                <div class="form-group row element-form">
                                    <div class="col-md-3">
                                        <label class="control-label">Image de Service</label>
                                    </div>
                                    <div class="col-sm-9 DefaultIcon">

                                        {% for iconservice in DirAssetParcour(asset('uploads/image/iconService/'~attributes.category.slug|lower~'/SVG/')) %}
                                            <img width="50px" height="50px" src="{{ asset('uploads/image/iconService/')}}{{  attributes.category.slug|lower~'/SVG/'}}{{ iconservice }}" alt="">
                                        {% endfor %}

                                    </div>
                                </div>
                                <div class="row">
                                    <div class="col-md-9 col-md-offset-3">

                                        <input type="text" class="form-control icon-filtre2 name_service" placeholder="recherche Votre Image">
                                        <input type="hidden" name="serviceIcon" class="form-control name_service" placeholder="recherche Votre Image" value="">
                                        <button type="button" class="btn btn-primary btn-lg btn-block"><i class="fa fa-search" aria-hidden="true"></i></button>

                                    </div>

                                    <div class=" pull-right col-sm-9 icon_list icon_list-edit">
                                        <span class="current-icon" style="font-size: 20px">
                                            Votre Icon Actuelle <i class="{% if service["serviceIcon"] is defined %}{{ service["serviceIcon"]|slice(0,50) }}{% endif %}" aria-hidden="true" style="font-size: 35px;"></i>
                                        </span>
                                    </div>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="submit" class="btn btn-default " data-target="modifier" data-selector="update_service_form">Enregistrer</button>
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                </div>
            </div>
        </div>
    </div>

{% endif %}
