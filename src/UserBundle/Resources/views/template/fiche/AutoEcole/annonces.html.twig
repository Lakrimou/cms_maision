<section id="section-annonces" class="property-details padding">
    <div class="container">
        <div class="row">
            <div class="col-xs-12 col-md-9 bottom40">
                <h2 class="text-uppercase">Nos <span class="color_red">Offres</span></h2>
                <div class="line_1"></div>
                <div class="line_2"></div>
                <div class="line_3"></div>
            </div>
            <div class="col-xs-12 col-md-3">
                {% if app.user != null and app.user == attributes.quoiqui.user %}
                    <div class="pull-right theme-btn ">
                        <button type="button" class="theme-btn b theme-btn button11 btn-style-one pull-right"
                                data-toggle="modal" data-target=".liste-produit">liste des Offres
                        </button>
                    </div>
                {% endif %}
            </div>
        </div>
        <div class="row">
            {% if(produit|length == 1) %}
            <div class="col-md-12 col-md-offset-4 col-xs-12 col-sm-offset-3 col-offset-xs-0">
                {% elseif(produit|length == 2) %}
                <div class="col-md-12 col-md-offset-2 col-xs-12 col-xs-offset-0">
                    {% else %}
                    <div class="col-md-12">
                        {% endif %}
                        <div class="row" id="append-item">
                            {% for p in produit[:4] %}
                                <div class="col-md-4 col-lg-3 col-xs-12 col-sm-6 col-custom item-scroll">
                                    <div class="item item-produit" data-prod="{{ loop.index }}">
                                        <div class="property_item bottom40">
                                            <div class="image">
                                                <img src="{{ asset('uploads/image/'~p.qouiqui.user.id~'/'~p.qouiqui.id~'/produits/'~p.photo|first) }}"
                                                     alt="listin" style="height:247px;" class="img-responsive">
                                                <div class="price">
                                                    {% if app.user != attributes.quoiqui.user %}
                                                    <span class="tag">
                                                        <a class="reserver-offre" data-id="{{ p.id }}" data-target="#commande-annonce" data-toggle="modal">Reserver</a>
                                                    </span>
                                                    {% endif %}
                                                </div>
                                                <div class="overlay">
                                                    <div class="centered"><a
                                                                class="link_arrow white_border show-detail-annonce"
                                                                href="#" data-toggle="modal"
                                                                data-target="#showAnnonce"
                                                                data-lien="{{ path('autoEcole_annonce_show',{'id':p.id,'idq':attributes.quoiqui.id}) }}"
                                                                data-mod="{{ path('autoEcole_annonce_edit',{'id':p.id}) }}"
                                                                data-sup="{{ path('autoEcole_annonce_remove',{'id':p.id}) }}"
                                                                data-identifiant="{{ p.id }}"
                                                                data-podui="{{ loop.index }}">Voir
                                                            Detail</a></div>
                                                </div>
                                            </div>
                                            <div class="proerty_content">
                                                <div class="proerty_text">
                                                    <h3>{{ p.nom }}</h3>
                                                    <span class="bottom10">{{ p.dateDeb }}
                                                        jusqu'a {{ p.dateFin }}</span>
                                                    <p><strong>{{ p.prix }} DT</strong></p>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            {% endfor %}
                        </div>
                        <div class="paginate">
                            {% if nb>4 %}
                                <span class="load-more-annonce">Voir plus</span>
                            {% endif %}
                            <span class="load-less-annonce">Masquer</span>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

