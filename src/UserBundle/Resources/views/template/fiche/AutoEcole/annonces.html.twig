                            <tr data-prod="{{ loop.index }}">
                                <td>{{ p.nom }}</td>
                                <td>{{ p.description[:150]|raw }}</td>
                                <td>{{ p.prix }}</td>
                                <td>{{ p.dateDeb }}</td>
                                <td>{{ p.dateFin }}</td>
