                           style="width: 100%;">
                        <thead>
                        <tr>
                            <th style="border:none;border-top-left-radius:5px;" class="th-table">Nom</th>
                            <th style="border:none" class="th-table">Description</th>
                            <th style="border:none" class="th-table">Prix</th>
                            <th style="border:none" class="th-table">Date Début</th>
                            <th style="border:none" class="th-table">Date Fin</th>
                            <th style="border:none;border-top-right-radius:5px;" class="text-center th-table">Action</th>
