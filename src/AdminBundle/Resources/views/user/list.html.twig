{% extends 'back/layout_admin.html.twig' %}
{% block contant %}
<div id="page-content">
    <!-- Add Row -->
    <!--===================================================-->
    <div class="panel">
        <div class="panel-heading">
            <h3 class="panel-title">Liste D'utilisateur</h3>
        </div>

        <div class="panel-body">
            <table id="list_user" class="table table-striped table-bordered" cellspacing="0" width="100%">
                <thead>
                <tr>
                    <th>ID</th>
                    <th>prenom</th>
                    <th class="min-tablet">username</th>
                    <th class="min-tablet">email.</th>
                    <th class="min-desktop">statu</th>
                    <th class="min-desktop">Dernière activité</th>
                    <th class="min-desktop">ACTION</th>
                </tr>
                </thead>
                <tbody>
                {% for u in user %}
                    <tr data-ref="{{ u.id }}">
                        <td>{{ u.id  }}</td>
                        <td>{{ u.prenom }}</td>
                        <td>{{ u.username }}</td>
                        <td>{{ u.email }}</td>
                        <td>{{ u.enabled }}</td>
                        <td>{{ u.lastLogin|date('Y-m-d H:i:s') }}</td>
                        <td>
                            <a href="{{ path('user_edit_admin',{id: u.id}) }}"><button class="btn btn-primary btn-xs" data-title="Edit"><span class="glyphicon glyphicon-pencil"></span></button></a>
                            <button class="btn btn-danger btn-xs"><span class="glyphicon glyphicon-trash"></span></button>


                        </td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>
        </div>
    </div>
    <!--===================================================-->
    <!-- End Add Row -->

</div>
    <!--===================================================-->
    <!--End page content-->
    <script>
        $(document).ready(function() {

            $('#list_user').DataTable({
                responsive: true
            });

        } );
    </script>
{% endblock %}
