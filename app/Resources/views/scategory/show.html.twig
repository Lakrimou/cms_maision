{% extends 'base.html.twig' %}

{% block body %}
    <h1>Scategory</h1>

    <table>
        <tbody>
            <tr>
                <th>Libelle</th>
                <td>{{ scategory.libelle }}</td>
            </tr>
            <tr>
                <th>Slug</th>
                <td>{{ scategory.slug }}</td>
            </tr>
            <tr>
                <th>Details</th>
                <td>{{ scategory.details }}</td>
            </tr>
            <tr>
                <th>Id</th>
                <td>{{ scategory.id }}</td>
            </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('scategory_index') }}">Back to the list</a>
        </li>
        <li>
            <a href="{{ path('scategory_edit', { 'id': scategory.id }) }}">Edit</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Delete">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}
