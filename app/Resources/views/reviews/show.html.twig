{% extends 'base.html.twig' %}

{% block body %}
    <h1>Review</h1>

    <table>
        <tbody>
            <tr>
                <th>Reviewtitle</th>
                <td>{{ review.reviewTitle }}</td>
            </tr>
            <tr>
                <th>Reviewmsg</th>
                <td>{{ review.reviewMsg }}</td>
            </tr>
            <tr>
                <th>Reviewnote</th>
                <td>{{ review.reviewNote }}</td>
            </tr>
            <tr>
                <th>Id</th>
                <td>{{ review.id }}</td>
            </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('reviews_index') }}">Back to the list</a>
        </li>
        <li>
            <a href="{{ path('reviews_edit', { 'id': review.id }) }}">Edit</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Delete">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}
