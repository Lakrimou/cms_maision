{% extends 'base.html.twig' %}

{% block body %}
    <h1>Car</h1>

    <table>
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ car.id }}</td>
            </tr>
            <tr>
                <th>Category</th>
                <td>{{ car.category }}</td>
            </tr>
            <tr>
                <th>Modelyear</th>
                <td>{% if car.modelYear %}{{ car.modelYear|date('Y-m-d') }}{% endif %}</td>
            </tr>
            <tr>
                <th>Mark</th>
                <td>{{ car.mark }}</td>
            </tr>
            <tr>
                <th>Model</th>
                <td>{{ car.model }}</td>
            </tr>
            <tr>
                <th>Mileage</th>
                <td>{{ car.mileage }}</td>
            </tr>
            <tr>
                <th>Energy</th>
                <td>{{ car.energy }}</td>
            </tr>
            <tr>
                <th>Fiscalpower</th>
                <td>{{ car.fiscalPower }}</td>
            </tr>
            <tr>
                <th>Images</th>
                <td>{{ car.images }}</td>
            </tr>
            <tr>
                <th>Details</th>
                <td>{{ car.details }}</td>
            </tr>
            <tr>
                <th>Other</th>
                <td>{{ car.other }}</td>
            </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('car_index') }}">Back to the list</a>
        </li>
        <li>
            <a href="{{ path('car_edit', { 'id': car.id }) }}">Edit</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Delete">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}
