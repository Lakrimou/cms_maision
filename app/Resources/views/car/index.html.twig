{% extends 'base.html.twig' %}

{% block body %}
    <h1>Cars list</h1>

    <table>
        <thead>
            <tr>
                <th>Id</th>
                <th>Category</th>
                <th>Modelyear</th>
                <th>Mark</th>
                <th>Model</th>
                <th>Mileage</th>
                <th>Energy</th>
                <th>Fiscalpower</th>
                <th>Images</th>
                <th>Details</th>
                <th>Other</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for car in cars %}
            <tr>
                <td><a href="{{ path('car_show', { 'id': car.id }) }}">{{ car.id }}</a></td>
                <td>{{ car.category }}</td>
                <td>{% if car.modelYear %}{{ car.modelYear|date('Y-m-d') }}{% endif %}</td>
                <td>{{ car.mark }}</td>
                <td>{{ car.model }}</td>
                <td>{{ car.mileage }}</td>
                <td>{{ car.energy }}</td>
                <td>{{ car.fiscalPower }}</td>
                <td>{{ car.images }}</td>
                <td>{{ car.details }}</td>
                <td>{{ car.other }}</td>
                <td>
                    <ul>
                        <li>
                            <a href="{{ path('car_show', { 'id': car.id }) }}">show</a>
                        </li>
                        <li>
                            <a href="{{ path('car_edit', { 'id': car.id }) }}">edit</a>
                        </li>
                    </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('car_new') }}">Create a new car</a>
        </li>
    </ul>
{% endblock %}
