{% extends 'base.html.twig' %}

{% block body %}
    <h1>Bookings list</h1>

    <table>
        <thead>
            <tr>
                <th>Date</th>
                <th>Statu</th>
                <th>Id</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for booking in bookings %}
            <tr>
                <td><a href="{{ path('booking_show', { 'id': booking.id }) }}">{{ booking.date }}</a></td>
                <td>{% if booking.statu %}Yes{% else %}No{% endif %}</td>
                <td>{{ booking.id }}</td>
                <td>
                    <ul>
                        <li>
                            <a href="{{ path('booking_show', { 'id': booking.id }) }}">show</a>
                        </li>
                        <li>
                            <a href="{{ path('booking_edit', { 'id': booking.id }) }}">edit</a>
                        </li>
                    </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('booking_new') }}">Create a new booking</a>
        </li>
    </ul>
{% endblock %}
