{% extends 'base.html.twig' %}

{% block body %}
    <h1>Booking</h1>

    <table>
        <tbody>
            <tr>
                <th>Date</th>
                <td>{% if booking.date %}{{ booking.date|date('Y-m-d H:i:s') }}{% endif %}</td>
            </tr>
            <tr>
                <th>Statu</th>
                <td>{% if booking.statu %}Yes{% else %}No{% endif %}</td>
            </tr>
            <tr>
                <th>Id</th>
                <td>{{ booking.id }}</td>
            </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('booking_index') }}">Back to the list</a>
        </li>
        <li>
            <a href="{{ path('booking_edit', { 'id': booking.id }) }}">Edit</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Delete">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}
